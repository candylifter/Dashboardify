{
  "manifest_version": 2,

  "name": "Dashboardify Chrome Plugin",
  "description": "This esadasfdsafdsafsdafsdted area of any website",
  "version": "0.0.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["content.css"],
        "js": ["content.js"]
      }
    ],

  "permissions": [
    "activeTab",
    "tabs"
  ]
}
